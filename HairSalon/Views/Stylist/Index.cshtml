<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Hair Salon</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link href="https://fonts.googleapis.com/css?family=Gugi" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>

  <body>

    <h2>Current stylists:</h2>


    @if (@Model.Count == 0)
    {
      <h3>No stylists have been added yet!</h3>
    }

    @foreach(var stylist in Model)
    {
      <h3><a href="/stylists/@stylist.GetId()">@stylist.StylistName</a></h3>
    }

    <form action='/stylists/new' method='get'>
      <button type="submit">Add a new stylist</button>
    </form><br>

    <form action='/stylists/delete' method='post'>
      <button type="submit">Delete all stylists</button>
    </form><br>

  </body>

</html>
