@using HairSalon.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>HOʻĀKOAKOA</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Staatliches" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg" class="sticky-top" id="indexNav">
      <img src="https://image.flaticon.com/icons/svg/1720/1720737.svg" width="40" height="40" alt="hashtag">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
          <a class="isDisabled" href="/stylists">Stylists</a>
          </li>
          <li class="nav-item">
          <a class="nav-link" href="/specialties">Specialties</a>
          </li>
        </ul>
      </div>
    </nav>

    <h1 class="welcome">Stylists</h1>

      <div class="outline">
        @if (@Model.Count == 0)
        {
          <h3>No stylists have been added yet!</h3>

        }

        @foreach(var stylist in Model)
        {
          <h3><a href="/stylists/@stylist.GetId()">@stylist.StylistName</a></h3>
        }

        <br><br><form action='/stylists/new' method='get'>
          <button type="submit" class="btn btn-info btn-sm">Add new stylist</button>
        </form><br>

        <form action='/stylists/delete' method='post'>
          <button type="submit" class="btn btn-danger btn-sm">Delete all stylists</button>
        </form>

      </div>

  </body>
</html>
